@model ThePlate.Models.Dish

@{
    ViewData["Title"] = "Redigera";
}
<section class="infoSection sectionWidth">
    <form class="crudForm" asp-action="Edit">
        <h2>Redigera</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="DishId" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label><br />
            <input asp-for="Name" class="form-control" /><br />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label><br />
            <input asp-for="Description" class="form-control" /><br />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label><br />
            <input asp-for="Price" class="form-control" /><br />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Spara" />
        </div>
    </form>
    <div class="backLink">
        <a class="crudLinks" asp-action="Index">Tillbaka till meny</a>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
